/*
 * Gallery Screen Styles
 *
 * CSS styling for the PlexiGlass API Gallery screen.
 */

/* Gallery Container Layout */
#gallery-container {
    height: 1fr;
    layout: horizontal;
}

/* Category List Sidebar */
.category-menu {
    width: 30;
    border: solid $primary;
    background: $panel;
    padding: 1;
    margin: 1;
}

.category-menu:focus {
    border: heavy $accent;
}

.demo-list {
    width: 36;
    border: solid $primary;
    background: $panel;
    padding: 1;
    margin: 1;
}

.demo-list:focus {
    border: heavy $accent;
}

/* Demo Panel */
#demo-panel {
    width: 1fr;
    border: solid $primary;
    background: $surface;
    padding: 1;
    margin: 1;
}

#demo-summary {
    height: auto;
    margin: 0 0 1 0;
}

.code-viewer {
    height: 1fr;
    margin: 0 0 1 0;
}

.results-display {
    height: 1fr;
    margin: 0 0 1 0;
}

#run-demo {
    width: 16;
    margin: 0 0 1 0;
}

#undo-button {
    width: 16;
}

#demo-panel:focus {
    border: heavy $accent;
}

/* Gallery Screen Title */
GalleryScreen Header {
    background: $boost;
}

GalleryScreen Header .header--title {
    color: $success;
    text-style: bold;
}

/* Gallery Footer */
GalleryScreen Footer {
    background: $panel;
}

GalleryScreen Footer .footer--key {
    background: $primary;
    color: $text;
}

GalleryScreen Footer .footer--description {
    color: $text-muted;
}
